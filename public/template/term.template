<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/xterm.css" />
    <script src="js/xterm.js"></script>
    <script src="js/xterm-addon-attach.js"></script>
    <script src="js/xterm-addon-web-links.js"></script>
    <title>{{ .Name }}</title>
</head>
<body>
    <div class="container">
      <div id="terminal"></div>
    </div>
    <script>
      const attachAddon = new AttachAddon.AttachAddon(
          new WebSocket('ws://' + window.location.host + '/conn?term=' + '{{ .Id }}'), { bidirectional: true });
      const webLinksAddon = new WebLinksAddon.WebLinksAddon()
      const term = new Terminal({
          'font-family': '"Lucida Console", "Courier New", monospace',
          'cols': {{ .Cols }},
          'rows': {{ .Rows }}
        });
      term.loadAddon(webLinksAddon);
      term.loadAddon(attachAddon);
      term.open(document.getElementById('terminal'));
      term.focus();
    </script>
    <style>
      html, body {
        height: 100%;
      }
      .container {
        display: flex;
        height: 100%;
        justify-content: center;
        align-items: center;
      }
    </style>
</body>
</html>